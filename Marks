marks1=int(input("Enter the marks for subject 1"))
marks2=int(input("Enter the marks for subject 2"))
marks3=int(input("Enter the marks for subject 3"))

total=marks1+marks2+marks3
percentage=total/3

print("total marks:",total)
print("Percentage",percentage)

if marks1>=35 and marks2>=35 and marks3>=35 and percentage >=40:
    print("Result:pass")
else:
    print("Fail")


// to find the topper of the class
students = []

# Step 1: Input names and marks of 3 students
for i in range(3):
    name = input(f"Enter name of student {i+1}: ")
    marks = float(input(f"Enter marks of {name}: "))
    students.append([name, marks])

# Step 2: Calculate average marks
total = sum([student[1] for student in students])
average = total / 3

# Step 3: Find the topper
topper = max(students, key=lambda x: x[1])

# Step 4: Print results
print("\nAverage marks of the class:", average)
print("Topper is:", topper[0], "with marks:", topper[1])

  
